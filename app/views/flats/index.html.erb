<div class="header">
<h3><%= link_to 'Simple Airbnb', flats_path %></h3>
<%= link_to "Add Flat", new_flat_path, :class => "btn btn-primary" %>
</div>

<div class="container">
  <h4>All our flats (<%= @flats.count %>)</h4>
  <div class="row">

  <p><% @flats.each do |flat| %>
      <div class="col">
        <div class="card">
          <div class="card-image">
            <% if flat.picture_url %>
             <%= image_tag flat["picture_url"], alt: "alttext", width: "100%" %>
            <% end %>
          </div>
          <div class="card-content">
            <p><strong><%= flat.name %></strong></p>
          <%= flat.address %>
          <div class="card-content-footer">
            <i class="fas fa-user-friends"></i><%= flat.number_of_guests%>
            <i class="fas fa-euro-sign"></i><%= flat.price_per_night%>
          </div>
          </div>
          <div class="card-actions">
            <%= link_to "More info", flat_path(flat) %>
            <%= link_to "Edit", edit_flat_path(flat) %>
            <%= link_to "Remove", flat_path(flat), method: :delete %>
          </div>
      </div>
    </div>
    <% end %>
  </p>
   </div>
</div>

